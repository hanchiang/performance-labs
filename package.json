{
  "name": "express-typescript-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "Bowden Kelly",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.+(ts|js)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run format",
    "serve": "node dist/bin/www.js",
    "watch-node": "nodemon dist/server.js",
    "test": "NODE_ENV=test npm run test-unit && npm run test-integration",
    "test-integration": "NODE_ENV=test nyc mocha -r ts-node/register test/integration/index.ts",
    "test-unit": "NODE_ENV=test nyc mocha -r ts-node/register test/unit/index.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "format": "prettier --write \"**/*.+(ts|js|json)\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "NODE_ENV=development npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lusca": "^1.6.1",
    "moment-timezone": "^0.5.31",
    "mysql2": "^2.1.0",
    "sequelize": "^5.21.10",
    "uuid": "^8.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.3",
    "@types/cls-hooked": "^4.3.0",
    "@types/concurrently": "^4.1.0",
    "@types/eslint": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/lusca": "^1.6.1",
    "@types/mocha": "^7.0.2",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^12.7.8",
    "@types/sequelize": "^4.28.9",
    "@types/sinon": "^9.0.1",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "chai": "^4.2.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "mocha": "^7.1.2",
    "nodemon": "^1.19.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.6.3"
  }
}
